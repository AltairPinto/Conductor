<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="br.com.cardtracker.Transferencia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nConta"/>

    <EditText
        android:layout_width="380px"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="20px"
        android:ems="10"
        android:id="@+id/nConta"
        android:text="@string/nConta"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView3"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nID"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/nID"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:text=""
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="440px"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Transferência"
        android:id="@+id/textView17"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nConta" />

    <!--Scroll para as duas Áreas-->

    <!--Scroll para os cartões-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_marginTop="250px"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="760px"
            android:id="@+id/relativeLayout"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Limites"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="10px"
                />
            <!--Informações para alteração-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Selecione os Cartões"
                android:id="@+id/textView44"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/Limites"
                android:layout_toEndOf="@+id/textView4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ID da Origem"
                android:id="@+id/textView444"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/textView44"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="20px"/>

            <Spinner
                android:layout_width="200px"
                android:layout_height="80px"
                android:inputType="number"
                android:text="@string/nIDNovo"
                android:ems="10"
                android:id="@+id/nIDOrigem"
                android:layout_below="@+id/textView444"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="60px"
                android:textColor="#D3D3D3"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:spinnerMode="dropdown"
                android:background="@drawable/icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ID do Destino"
                android:id="@+id/textView555"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/textView44"
                android:layout_alignLeft="@+id/textView444"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="390px"/>

            <Spinner
                android:layout_width="200px"
                android:layout_height="80px"
                android:inputType="number"
                android:text="@string/nIDNovo"
                android:ems="10"
                android:id="@+id/nIDDestino"
                android:layout_below="@+id/textView555"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="400px"
                android:layout_alignLeft="@+id/textView444"
                android:textColor="#D3D3D3"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:spinnerMode="dropdown"
                android:background="@drawable/icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Valor (R$)"
                android:id="@+id/textView4"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignTop="@+id/nIDOrigem"
                android:layout_marginTop="150px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:layout_width="220px"
                android:layout_height="90px"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/nValor"
                android:textColor="#D3D3D3"
                android:layout_alignLeft="@+id/textView4"
                android:text="@string/nValor"
                android:layout_below="@+id/textView4" />

            <EditText
                android:layout_width="200px"
                android:layout_height="90px"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/nConfirmacao"
                android:textColor="#D3D3D3"
                android:text="@string/nConfirmacao"
                android:layout_below="@+id/textView16"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView16"
                android:layout_marginLeft="20px"/>

            <Button
                android:id="@+id/btnValidar"
                android:layout_width="wrap_content"
                android:layout_height="75px"
                android:text="Validar \nOperação"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginLeft="420px"
                android:layout_marginTop="150px"
                android:layout_alignLeft="@+id/nConfirmacao"
                android:layout_alignTop="@+id/btnGerarCodigo" />

            <Button
                android:id="@+id/btnGerarCodigo"
                android:layout_width="wrap_content"
                android:layout_height="75px"
                android:text="Gerar \nCódigo"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignBottom="@+id/nValor"
                android:layout_alignLeft="@+id/nValor"
                android:layout_marginLeft="420px"
                android:layout_marginTop="40px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Código de Confirmação"
                android:id="@+id/textView16"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/nValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40px"
                android:layout_marginLeft="20px"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Extratos"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/nConfirmacao"
                android:layout_alignParentStart="true"
                android:layout_marginTop="80px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Extratos"
                android:id="@+id/textView18"
                android:layout_below="@+id/btnValidar"
                android:layout_centerHorizontal="true"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="30px"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout> <!--Layout dos Botões-->


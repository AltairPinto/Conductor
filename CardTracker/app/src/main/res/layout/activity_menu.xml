<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="br.com.cardtracker.Menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nConta"
        android:text="@string/nConta"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nConta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">


        <ImageButton
            android:layout_width="230px"
            android:layout_height="230px"
            android:id="@+id/btnLocal"
            android:background="@drawable/local"
            android:layout_marginLeft="40px"
            android:layout_marginTop="50px"
            />

        <TextView
            android:layout_width="230px"
            android:layout_height="55px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="@string/btnLocal"
            android:id="@+id/Local"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_alignTop="@+id/btnLocal"
            android:layout_marginLeft="40px"
            android:layout_marginTop="180px"
            android:background="@drawable/icon"
         />

    <ImageButton
    android:layout_width="230px"
    android:layout_height="230px"
    android:id="@+id/btnCompra"
    android:background="@drawable/compra"
        android:layout_alignTop="@+id/Local"
        android:layout_marginLeft="40px"
        android:layout_marginTop="140px" />

        <TextView
            android:layout_width="230px"
            android:layout_height="55px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="@string/btnCompra"
            android:id="@+id/Compra"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_alignTop="@+id/btnCompra"
            android:layout_marginLeft="40px"
            android:layout_marginTop="180px"
            android:background="@drawable/icon"
            />

        <ImageButton
            android:layout_width="230px"
            android:layout_height="230px"
            android:id="@+id/btnLock"
            android:layout_alignTop="@+id/Compra"
            android:background="@drawable/lock"
            android:layout_marginLeft="40px"
            android:layout_marginTop="140px" />
    <TextView
        android:layout_width="230px"
        android:layout_height="55px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/btnLock"
        android:id="@+id/Lock"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignTop="@+id/btnLock"
        android:layout_marginLeft="40px"
        android:layout_marginTop="180px"
        android:background="@drawable/icon" />


    <ImageButton
        android:layout_width="230px"
        android:layout_height="230px"
        android:id="@+id/btnCartoes"
        android:background="@drawable/cartao"
        android:layout_alignTop="@+id/Conta"
        android:layout_alignLeft="@+id/btnCompra"
        android:layout_marginLeft="380px"
        android:layout_marginTop="140px" />

    <TextView
        android:layout_width="230px"
        android:layout_height="55px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:text="@string/btnCartoes"
        android:id="@+id/Cartoes"
        android:layout_alignTop="@+id/btnCartoes"
        android:layout_alignLeft="@+id/btnCompra"
        android:layout_marginLeft="380px"
        android:layout_marginTop="180px"
        android:background="@drawable/icon"/>

        <ImageButton
            android:layout_width="230px"
            android:layout_height="230px"
            android:id="@+id/btnTransferencia"
            android:background="@drawable/transferencia"
            android:layout_alignTop="@+id/Cartoes"
            android:layout_marginLeft="380px"
            android:layout_marginTop="140px" />

        <TextView
            android:layout_width="230px"
            android:layout_height="55px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:text="@string/btnTransferencia"
            android:id="@+id/Transferencia"
            android:layout_alignTop="@+id/btnTransferencia"
            android:layout_marginLeft="380px"
            android:layout_marginTop="180px"
            android:background="@drawable/icon"/>

    <ImageButton
    android:layout_width="230px"
    android:layout_height="230px"
    android:id="@+id/btnConta"
        android:layout_alignLeft="@+id/btnLocal"
        android:layout_marginLeft="380px"
        android:layout_marginTop="50px"
        android:background="@drawable/limite"
        />

    <TextView
        android:layout_width="230px"
        android:layout_height="55px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:text="@string/btnConta"
        android:id="@+id/Conta"
        android:layout_alignTop="@+id/btnConta"
        android:layout_alignLeft="@+id/btnLocal"
        android:layout_marginLeft="380px"
        android:layout_marginTop="180px"
        android:background="@drawable/icon"
         />


    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
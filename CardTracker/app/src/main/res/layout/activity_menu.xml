<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="br.com.cardtracker.Menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nConta"/>

    <EditText
        android:layout_width="380px"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="20px"
        android:ems="10"
        android:id="@+id/nConta"
        android:text="@string/nConta"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView3"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nID"/>

    <EditText
        android:layout_width="180px"
        android:layout_height="wrap_content"
        android:id="@+id/nID"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView17"
        android:text=""
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="440px"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px"
        android:layout_below="@+id/nConta"
        android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">


        <ImageButton
            android:layout_width="160px"
            android:layout_height="180px"
            android:id="@+id/btnLocal"
            android:background="@drawable/local"
            android:layout_marginLeft="30px"
            android:layout_marginTop="100px"
            />

        <TextView
            android:layout_width="160px"
            android:layout_height="60px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="@string/btnLocal"
            android:id="@+id/Local"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_alignTop="@+id/btnLocal"
            android:layout_marginLeft="30px"
            android:layout_marginTop="140px"
            android:background="@drawable/icon"
         />

    <ImageButton
    android:layout_width="160px"
    android:layout_height="180px"
    android:id="@+id/btnCompra"
    android:background="@drawable/compra"
        android:layout_alignTop="@+id/Local"
        android:layout_marginLeft="30px"
        android:layout_marginTop="180px" />

        <TextView
            android:layout_width="160px"
            android:layout_height="60px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="@string/btnCompra"
            android:id="@+id/Compra"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_alignTop="@+id/btnCompra"
            android:layout_marginLeft="30px"
            android:layout_marginTop="140px"
            android:background="@drawable/icon"
            />

        <ImageButton
            android:layout_width="160px"
            android:layout_height="180px"
            android:id="@+id/btnSair"
            android:background="@drawable/sair"
            android:layout_alignTop="@+id/Cartoes"
            android:layout_alignLeft="@+id/btnTransferencia"
            android:layout_marginLeft="220px"
            android:layout_marginTop="180px" />
    <TextView
        android:layout_width="160px"
        android:layout_height="60px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="Sair"
        android:id="@+id/Sair"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignTop="@+id/btnSair"
        android:layout_alignLeft="@+id/Transferencia"
        android:layout_marginLeft="220px"
        android:layout_marginTop="140px"
        android:background="@drawable/icon" />


    <ImageButton
        android:layout_width="160px"
        android:layout_height="180px"
        android:id="@+id/btnCartoes"
        android:background="@drawable/cartao"
        android:layout_alignLeft="@+id/btnConta"
        android:layout_marginLeft="220px"
        android:layout_marginTop="100px" />

    <TextView
        android:layout_width="160px"
        android:layout_height="60px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:text="@string/btnCartoes"
        android:id="@+id/Cartoes"
        android:layout_alignTop="@+id/btnCartoes"
        android:layout_alignLeft="@+id/btnConta"
        android:layout_marginLeft="220px"
        android:layout_marginTop="140px"
        android:background="@drawable/icon"/>

        <ImageButton
            android:layout_width="160px"
            android:layout_height="180px"
            android:id="@+id/btnTransferencia"
            android:background="@drawable/transferencia"
            android:layout_alignTop="@+id/Conta"
            android:layout_alignLeft="@+id/btnCompra"
            android:layout_marginLeft="220px"
            android:layout_marginTop="180px" />

        <TextView
            android:layout_width="160px"
            android:layout_height="60px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:text="@string/btnTransferencia"
            android:id="@+id/Transferencia"
            android:layout_alignTop="@+id/btnTransferencia"
            android:layout_alignLeft="@+id/btnCompra"
            android:layout_marginLeft="220px"
            android:layout_marginTop="140px"
            android:background="@drawable/icon"/>

    <ImageButton
    android:layout_width="160px"
    android:layout_height="180px"
    android:id="@+id/btnConta"
        android:layout_alignLeft="@+id/btnLocal"
        android:layout_marginLeft="220px"
        android:layout_marginTop="100px"
        android:background="@drawable/limite"
        />

    <TextView
        android:layout_width="160px"
        android:layout_height="60px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:text="@string/btnConta"
        android:id="@+id/Conta"
        android:layout_alignTop="@+id/btnConta"
        android:layout_alignLeft="@+id/btnLocal"
        android:layout_marginLeft="220px"
        android:layout_marginTop="140px"
        android:background="@drawable/icon"
         />


    </RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/nConta"
        android:layout_marginTop="120px"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.cardtracker.Menu">

    <ImageView
        android:layout_width="300px"
        android:layout_height="200px"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_localization"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="200px"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_limit" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="200px"
        android:id="@+id/imageView3"
        android:src="@mipmap/ic_cash"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="200px"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/imageView2"
        android:src="@mipmap/ic_ok" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnLocais"
        android:id="@+id/btnLocais"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnInfos"
        android:id="@+id/btnInfos"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCompra"
        android:id="@+id/btnCompra"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnConfirma"
        android:id="@+id/btnConfirma"
        android:layout_alignBottom="@+id/btnCompra"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/imageView4"
        android:onClick="goToConfirma" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextAgencia"
        android:text="@string/Agencia"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_toEndOf="@+id/editText3"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Agência"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView7"
        android:layout_above="@+id/editTextConta"
        android:layout_alignEnd="@+id/editTextConta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Conductor"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/editTextAgencia"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnCompra"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextConta"
        android:text="@string/Conta"
        android:layout_alignTop="@+id/editTextAgencia"
        android:layout_toEndOf="@+id/editTextAgencia"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cartão"
        android:id="@+id/textView9"
        android:layout_below="@+id/editTextAgencia"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Cartao"
        android:text="@string/Cartao"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editTextConta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bandeira"
        android:id="@+id/textView10"
        android:layout_below="@+id/editTextAgencia"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@mipmap/ic_visa"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView7" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="br.com.cardtracker.Compra">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nConta"/>

    <EditText
        android:layout_width="380px"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="20px"
        android:ems="10"
        android:id="@+id/nConta"
        android:text="@string/nConta"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView3"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nID"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/nID"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:text=""
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="440px"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Compra"
        android:id="@+id/textView17"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_marginTop="190px"
        android:layout_centerHorizontal="true" />

    <!--Scroll para as duas Áreas-->

    <!--Scroll para os cartões-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_marginTop="250px"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="760px"
            android:id="@+id/relativeLayout"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Limites"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="10px"
                />
            <!--Informações para alteração-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Selecione o Cartão (ID)"
                android:id="@+id/textView44"
                android:layout_below="@+id/Limites"
                android:layout_marginBottom="20px"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="20px"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ID do Cartão"
                android:id="@+id/textView444"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/textView44"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="40px"/>

            <Spinner
                android:layout_width="200px"
                android:layout_height="100px"
                android:inputType="number"
                android:text=""
                android:ems="10"
                android:id="@+id/nIDSpinner"
                android:layout_below="@+id/textView444"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="60px"
                android:textColor="#D3D3D3"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:spinnerMode="dropdown"
                android:background="@drawable/icon"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Valor (R$)"
                android:id="@+id/textView4"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginLeft="40px"
                android:layout_above="@+id/nIDSpinner"
                android:layout_alignStart="@+id/nValor" />

            <EditText
                android:layout_width="220px"
                android:layout_height="90px"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/nValor"
                android:textColor="#D3D3D3"
                android:text="@string/nValor"
                android:layout_alignBottom="@+id/nIDSpinner"
                android:layout_alignLeft="@+id/nIDNovo"
                android:layout_marginLeft="400px"/>

            <EditText
                android:layout_width="200px"
                android:layout_height="90px"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/nConfirmacao"
                android:textColor="#D3D3D3"
                android:text="@string/nConfirmacao"
                android:layout_marginLeft="20px"
                android:layout_below="@+id/textView16"
                android:layout_alignEnd="@+id/btnGerarCodigo"
                android:layout_alignStart="@+id/btnGerarCodigo" />

            <Button
                android:id="@+id/btnValidar"
                android:layout_width="wrap_content"
                android:layout_height="75px"
                android:text="Validar Compra"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="10px"
                android:layout_marginLeft="420px"
                android:layout_below="@+id/nConfirmacao"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnGerarCodigo"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="Gerar Código de Confirmação"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginLeft="220px"
                android:layout_marginTop="60px"
                android:layout_below="@+id/nIDSpinner"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Código de Confirmação"
                android:id="@+id/textView16"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20px"
                android:layout_below="@+id/btnGerarCodigo"
                android:layout_alignEnd="@+id/textView44" />


        </RelativeLayout>
    </ScrollView>



</RelativeLayout> <!--Layout dos Botões-->

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".Desbloqueio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nConta"/>

    <EditText
        android:layout_width="380px"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="20px"
        android:ems="10"
        android:id="@+id/nConta"
        android:text="@string/nConta"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView3"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nID"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/nID"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:text=""
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="440px"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cartões"
        android:id="@+id/textView17"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nConta"
        android:layout_toStartOf="@+id/textView3" />

    <!--Scroll para as duas Áreas-->

    <!--Scroll para os cartões-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_marginTop="250px"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="760px"
            android:id="@+id/relativeLayout"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Cartoes"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="10px"
                />
            <!--Informações para alteração-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Selecione um Cartão (ID)"
                android:id="@+id/textView44"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/Cartoes"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"/>

            <Spinner
                android:layout_width="200px"
                android:layout_height="80px"
                android:inputType="number"
                android:text="@string/nIDNovo"
                android:ems="10"
                android:id="@+id/nIDSpinner"
                android:layout_below="@+id/textView44"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:textColor="#D3D3D3"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:spinnerMode="dropdown"
                android:background="@drawable/icon"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout> <!--Layout dos Botões-->
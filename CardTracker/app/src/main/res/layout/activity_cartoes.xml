<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".Cartoes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conta"
        android:id="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nConta"/>

    <EditText
        android:layout_width="380px"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="20px"
        android:ems="10"
        android:id="@+id/nConta"
        android:text="@string/nConta"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView2"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView3"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignLeft="@+id/nID"/>

    <EditText
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/nID"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:text=""
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="440px"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cartões"
        android:id="@+id/textView17"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nConta"
        android:layout_toStartOf="@+id/textView3" />

    <!--Scroll para as duas Áreas-->

            <!--Scroll para os cartões-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_marginTop="250px"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="760px"
            android:id="@+id/relativeLayout"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Cards"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginTop="10px"
                />
            <!--Informações para alteração-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Selecione um Cartão"
                android:id="@+id/textView44"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/Cards"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"/>

            <Spinner
                android:layout_width="200px"
                android:layout_height="80px"
                android:inputType="number"
                android:text="@string/nIDNovo"
                android:ems="10"
                android:id="@+id/nIDNovo"
                android:layout_below="@+id/textView44"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:textColor="#D3D3D3"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:spinnerMode="dropdown"
                android:background="@drawable/icon"/>

            <Button
                android:id="@+id/btnBloqueio"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="Bloqueio"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignBottom="@+id/nIDNovo"
                android:layout_alignLeft="@+id/btnCancelarCartao"
                android:layout_marginLeft="10px"
                android:layout_marginTop="40px"/>

            <Button
                android:id="@+id/btnLimite"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="Limite"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignBottom="@+id/nIDNovo"
                android:layout_alignLeft="@+id/btnBloqueio"
                android:layout_marginLeft="200px"
                android:layout_marginTop="40px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CVV"
                android:id="@+id/textView4"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignTop="@+id/nIDNovo"
                android:layout_marginTop="100px"/>

            <EditText
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nCVVNovo"
                android:textColor="#D3D3D3"
                android:layout_alignLeft="@+id/textView4"
                android:text="@string/nCVVNovo"
                android:layout_below="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nome"
                android:id="@+id/textView12"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignStart="@+id/nNomeNovo" />

            <EditText
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nNomeNovo"
                android:textColor="#D3D3D3"
                android:text="@string/nNomeNovo"
                android:layout_alignEnd="@+id/btnExtratoCartao"
                android:layout_toEndOf="@+id/nCVVNovo"
                android:layout_below="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Número:"
                android:id="@+id/textView14"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/nNomeNovo"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/nNumeroNovo"
                android:text="@string/nNumeroNovo"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/nNomeNovo"
                android:layout_below="@+id/textView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Senha"
                android:id="@+id/textView15"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_below="@+id/nNumeroNovo"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nSenhaNova"
                android:textColor="#D3D3D3"
                android:text="@string/nSenhaNova"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/nNumeroNovo"
                android:layout_below="@+id/textView15" />

            <Button
                android:id="@+id/btnAlterarCartao"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="Alterar"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_marginLeft="30px"
                android:layout_below="@+id/nSenhaNova"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btnCancelarCartao"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="Cancelar"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignBottom="@+id/btnAlterarCartao"
                android:layout_alignLeft="@+id/btnAlterarCartao"
                android:layout_marginLeft="220px"
                android:layout_marginTop="40px"/>

            <Button
                android:id="@+id/btnExtratoCartao"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="Extrato"
                android:background="@drawable/icon"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignBottom="@+id/btnAlterarCartao"
                android:layout_alignLeft="@+id/btnCancelarCartao"
                android:layout_marginLeft="210px"
                android:layout_marginTop="40px"/>

        </RelativeLayout>
                </ScrollView>



</RelativeLayout> <!--Layout dos Botões-->


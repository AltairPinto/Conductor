<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".Contas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome da Conta"
        android:id="@+id/textView13"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/nConta"
        android:ems="10"
        android:id="@+id/nConta"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/textView17"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="#D3D3D3"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alterações da Conta"
        android:id="@+id/textView17"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

    <Button
        android:id="@+id/btnAlterarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAlterarConta"
        android:background="@drawable/icon"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_marginTop="850px"
        android:layout_alignEnd="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView7"
        android:layout_below="@+id/nConta"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20px"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nID"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView17"
        android:text="@string/nID"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="#D3D3D3"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnDeletarConta"
        android:id="@+id/btnDeletarConta"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:background="@drawable/icon"
        android:layout_marginTop="850px"
        android:layout_marginLeft="400px"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(Para realizar alteraçõs, basta modificar os campos abaixo e clicar no botão 'Alterar Conta')"
        android:id="@+id/textView8"
        android:layout_above="@+id/textView17"
        android:layout_alignTop="@+id/nID"
        android:layout_marginTop="120px"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="525px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOVO Nome da Conta"
        android:id="@+id/textView9"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOVO ID"
        android:id="@+id/textView10"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/nContaNovo"
        android:ems="10"
        android:id="@+id/nContaNovo"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView17"
        android:textColor="#D3D3D3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/nIDNovo"
        android:ems="10"
        android:id="@+id/nIDNovo"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:textColor="#D3D3D3"/>

</RelativeLayout>

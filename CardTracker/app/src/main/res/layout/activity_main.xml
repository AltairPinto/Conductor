<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="br.com.cardtracker.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bem vinda, Conductor"
        android:id="@+id/textView"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conta"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnEntrar"
        android:id="@+id/btnEntrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:background="@drawable/icon"
        />

    <EditText
        android:id="@+id/nConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/nConta"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/nConta"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <EditText
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nID"
        android:text="@string/nID"
        android:visibility="visible"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="#D3D3D3"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/nID"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/password"
        android:text="@string/nSenha"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textColor="#D3D3D3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(Gerada automaticamente pela API)"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="#D3D3D3"/>

</RelativeLayout>
